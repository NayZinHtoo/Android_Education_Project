<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:background="#00695c"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/cardview_style"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@mipmap/car1" />
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#fff"
            android:layout_margin="10dp"
            android:text="How to use this application because"/>
        <Button
            android:id="@+id/idPlay1"
            android:background="@drawable/btn_style"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_height="50dp"
            android:text="Driving Car"/>
    </LinearLayout>
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cardview_style"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@mipmap/logo" />
            <TextView
                android:id="@+id/txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:layout_margin="10dp"
                android:text="How to use this application because"/>
            <Button
                android:id="@+id/idPlay2"
                android:background="@drawable/btn_style"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_height="50dp"
                android:text="Playing Alphabet"/>
        </LinearLayout>


</LinearLayout>
</ScrollView>